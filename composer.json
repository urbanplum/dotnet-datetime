{
    "name": "urbanplum/php-dotnet-datetime",
    "description": "Tools to convert between .NET and PHP date formats",
    "keywords": [
        "urbanplum",
        "php-dotnet-datetime"
    ],
    "homepage": "https://github.com/urbanplum/php-dotnet-datetime",
    "license": "MIT",
    "authors": [
        {
            "name": "John Smith",
            "email": "hello@johnsmith.io",
            "homepage": "http://johnsmith.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "symfony/var-dumper": "~2.7"
    },
    "autoload": {
        "psr-4": {
            "Urbanplum\\PhpDotnetDateTime\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Urbanplum\\PhpDotnetDateTime\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit ./tests"
    }
}
